{
    "extends": ["plugin:jest/recommended", "plugin:vue/essential", "eslint:recommended", "google"],

    "overrides": [{
        "files": ["jest.config.js", "postcss.config.js", "webpack/**/*.js"],
        "env": {
            "node": true
        }
    }],

    "env": {
        "es6": true
    },
    "globals": {
        "process": "readonly"
    },

    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "arrow-parens": "off",
        "comma-dangle": "warn",
        "indent": ["error", 4],
        "no-console": "warn"
    }
}
